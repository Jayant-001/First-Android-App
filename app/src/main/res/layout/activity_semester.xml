<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ebooks.SemesterActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/first_sem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:text="1st semester"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/second_sem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:text="2nd semester"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/third_sem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:text="3rd semester"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/fourth_sem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:text="4th semester"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/fifth_sem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:text="5th semester"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/sixth_sem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:text="6th semester"
            android:textSize="28sp" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>