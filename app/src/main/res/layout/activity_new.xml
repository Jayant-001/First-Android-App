<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66778A"
    tools:context=".dashboard.NewActivity">

    <LinearLayout
        android:paddingBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:background="@drawable/top"
            android:orientation="vertical"
            android:paddingStart="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="250dp"
                android:fontFamily="sans-serif"
                android:text="App name"
                android:textColor="#B7FFFFFF"
                android:textSize="28sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="App description"
                android:textColor="#B7FFFFFF"
                android:textSize="20sp" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/group"
            android:fontFamily="@font/pacifico"
            android:gravity="center"
            android:text="News Feed"
            android:textColor="#E6FFFFFF"
            android:textSize="28sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:paddingHorizontal="40dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp">

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:background="@drawable/inner_shadow"
                android:gravity="center"
                android:paddingTop="6dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="85dp"
                    android:layout_height="60dp"
                    android:src="@drawable/note"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pacifico"
                    android:text="My Notes"
                    android:textColor="#F2FFFFFF"
                    android:textSize="20sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:gravity="center"
                android:layout_marginStart="30dp"
                android:background="@drawable/inner_shadow"
                android:paddingTop="8dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="85dp"
                    android:layout_height="60dp"
                    android:src="@drawable/read_books"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pacifico"
                    android:text="Ebooks"
                    android:textColor="#D9FFFFFF"
                    android:textSize="20sp" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginTop="11dp"
                android:layout_height="1dp"
                android:background="#2962FF"/>

            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="#FFFFFF"
                android:layout_marginHorizontal="6dp"
                android:text="Other stuffs"/>

            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginTop="11dp"
                android:layout_height="1dp"
                android:background="#304FFE"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:paddingHorizontal="40dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp">

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:background="@drawable/inner_shadow"
                android:gravity="center"
                android:paddingTop="8dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="85dp"
                    android:layout_height="60dp"
                    android:src="@drawable/meme"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pacifico"
                    android:text="Memes"
                    android:textColor="#D68159"
                    android:textSize="20sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:gravity="center"
                android:layout_marginStart="30dp"
                android:background="@drawable/inner_shadow"
                android:paddingTop="8dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="85dp"
                    android:layout_height="60dp"
                    android:src="@drawable/emoji"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pacifico"
                    android:text="Jokes"
                    android:textColor="#EFCF29"
                    android:textSize="20sp" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginTop="11dp"
                android:layout_height="1dp"
                android:background="#2962FF"/>

            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="#F3F3F3"
                android:layout_marginHorizontal="6dp"
                android:text="Admin Panel"/>

            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginTop="11dp"
                android:layout_height="1dp"
                android:background="#304FFE"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/group"
            android:fontFamily="@font/pacifico"
            android:gravity="center"
            android:text="Admin Login"
            android:textColor="#E6FFFFFF"
            android:textSize="28sp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:paddingHorizontal="40dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp">

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="140dp"
                android:background="@drawable/inner_shadow"
                android:gravity="center"
                android:paddingTop="4dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/notes"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pacifico"
                    android:gravity="center"
                    android:text="Manage\nNotices"
                    android:lineSpacingExtra="-10dp"
                    android:textColor="#E6FFFFFF"
                    android:textSize="20sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="140dp"
                android:gravity="center"
                android:layout_marginStart="30dp"
                android:background="@drawable/inner_shadow"
                android:paddingTop="6dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/book"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pacifico"
                    android:gravity="center"
                    android:text="Manage\nEbooks"
                    android:lineSpacingExtra="-10dp"
                    android:textColor="#E6FFFFFF"
                    android:textSize="20sp" />

            </LinearLayout>

        </LinearLayout>



    </LinearLayout>

</ScrollView>