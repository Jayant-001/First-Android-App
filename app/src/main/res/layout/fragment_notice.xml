<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66778A"
    tools:context=".dashboard.NoticeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="65dp">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="340dp"
            android:background="@drawable/top"
            android:orientation="vertical"
            android:paddingStart="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="250dp"
                android:fontFamily="sans-serif"
                android:text="App name"
                android:textColor="#B7FFFFFF"
                android:textSize="28sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="App description"
                android:textColor="#B7FFFFFF"
                android:textSize="20sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/show_news_feed"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/group"
            android:fontFamily="@font/pacifico"
            android:gravity="center"
            android:text="News Feed"
            android:textColor="#E6FFFFFF"
            android:textSize="28sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:paddingHorizontal="40dp">

            <LinearLayout
                android:id="@+id/show_my_notes"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:background="@drawable/inner_shadow"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="6dp">

                <ImageView
                    android:layout_width="85dp"
                    android:layout_height="60dp"
                    android:src="@drawable/note" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pacifico"
                    android:text="My Notes"
                    android:textColor="#F2FFFFFF"
                    android:textSize="20sp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/show_books"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:layout_marginStart="30dp"
                android:background="@drawable/inner_shadow"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="8dp">

                <ImageView
                    android:layout_width="85dp"
                    android:layout_height="60dp"
                    android:src="@drawable/read_books" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pacifico"
                    android:text="Ebooks"
                    android:textColor="#D9FFFFFF"
                    android:textSize="20sp" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="11dp"
                android:layout_weight="1"
                android:background="#2962FF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="6dp"
                android:gravity="center"
                android:text="Other stuffs"
                android:textColor="#FFFFFF"
                android:textSize="17sp"
                android:textStyle="bold" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="11dp"
                android:layout_weight="1"
                android:background="#304FFE" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:paddingHorizontal="40dp">

            <LinearLayout
                android:id="@+id/show_memes"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:background="@drawable/inner_shadow"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="8dp">

                <ImageView
                    android:layout_width="85dp"
                    android:layout_height="60dp"
                    android:src="@drawable/meme" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pacifico"
                    android:text="Memes"
                    android:textColor="#D68159"
                    android:textSize="20sp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/show_jokes"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:layout_marginStart="30dp"
                android:background="@drawable/inner_shadow"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="8dp">

                <ImageView
                    android:layout_width="85dp"
                    android:layout_height="60dp"
                    android:src="@drawable/emoji" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pacifico"
                    android:text="Jokes"
                    android:textColor="#EFCF29"
                    android:textSize="20sp" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="11dp"
                android:layout_weight="1"
                android:background="#2962FF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="6dp"
                android:gravity="center"
                android:text="Admin Panel"
                android:textColor="#F3F3F3"
                android:textSize="17sp"
                android:textStyle="bold" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="11dp"
                android:layout_weight="1"
                android:background="#304FFE" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/manage_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:paddingHorizontal="40dp">

            <LinearLayout
                android:id="@+id/show_manage_notice"
                android:layout_width="150dp"
                android:layout_height="140dp"
                android:background="@drawable/inner_shadow"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="4dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/notes" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pacifico"
                    android:gravity="center"
                    android:lineSpacingExtra="-10dp"
                    android:text="Manage\nNotices"
                    android:textColor="#E6FFFFFF"
                    android:textSize="20sp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/show_manage_books"
                android:layout_width="150dp"
                android:layout_height="140dp"
                android:layout_marginStart="30dp"
                android:background="@drawable/inner_shadow"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="6dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/book" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pacifico"
                    android:gravity="center"
                    android:lineSpacingExtra="-10dp"
                    android:text="Manage\nEbooks"
                    android:textColor="#E6FFFFFF"
                    android:textSize="20sp" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/show_admin_login"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/group"
            android:fontFamily="@font/pacifico"
            android:gravity="center"
            android:text="Admin Login"
            android:textColor="#E6FFFFFF"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/show_admin_logout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/group"
            android:fontFamily="@font/pacifico"
            android:gravity="center"
            android:text="Logout"
            android:textColor="#E6FFFFFF"
            android:textSize="28sp" />

     <TextView
                android:id="@+id/show_admin_signup"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/group"
                android:fontFamily="@font/pacifico"
                android:gravity="center"
                android:text="Add New User"
                android:textColor="#E6FFFFFF"
                android:textSize="28sp" />


    </LinearLayout>

</ScrollView>